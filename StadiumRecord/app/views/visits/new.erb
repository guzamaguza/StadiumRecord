<h2> Add A New Visit: </h2>

<form method="post" action="/visits/new">

  <label>Enter the Date:</label>
  <input type="text" name="date" placeholder="[ex. 01/02/2020]"><br>

  <label>Select a Stadium:</label>

    <div class= "row">
      <link rel="stylesheet" href="css/styles.css">
      <ul class="columns" data-columns="2">
        <% @arenas.each do |arena| %>
            <li><input type="radio" name="arena" id="<%= arena.name %>" value="<%= arena.name %>"><%= arena.name %><br></li>
        <% end %>
      </ul>
    </div>

  <input type="submit" value="Submit">
</form>
