<h2> Add A New Visit: </h2>

<form method="post" action="/visits/new">

  <label>Enter the Date:</label>
  <input type="text" name="date" placeholder="[ex. 01/02/2020]"><br>

  <label>Select a Stadium:</label>


  <% if @error_message %>
    <div id="success" style="border: 2px solid green;">
    <%= @error_message %>
    <% @error_message.clear%>
    </div>
  <% end %>

    <% q = 0 %>
    <div class= "row">
      <link rel="stylesheet">
      <ul class="columns" data-columns="2">
        <% @arenas.each do |arena| %>

            <li><input type="radio" name="name" id="name" value="<%arena[1][:name]%>"> <%= arena[1][:name]%> <br></li>
            <input id="hidden" type="hidden" name="location" id="location" value="<%= arena[1][:location]%>">
            <input id="hidden" type="hidden" name="team" id="team" value="<%= arena[1][:team]%>">

            <% q += 1 %>
            <% if q == 30 %>
              <% break %>
            <% end %>
        <% end %>
      </ul>
    </div>

  <input type="submit" value="Submit">
</form>
