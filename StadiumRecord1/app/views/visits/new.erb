<h2> Add A New Visit: </h2>

<form method="post" action="/visits/new">
  <label>Enter the Stadium:</label>
  <input type="text" name="stadium" placeholder="Stadium"><br>
  <label>Enter the Date:</label>

  <% @arenas.each do |stadium| %>
    <input type="checkbox" name="stadium" id="<%= stadium %>" value="<%= stadium %>"><%= stadium.name %><br>
  <% end %>
  
  <input type="text" name="date" placeholder="Date"><br>
  <input type="submit" value="submit">
</form>
